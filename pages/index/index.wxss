/* pages/index/index.wxss */

page {
  height: 100%;
  width: 100%;
}

.upload {
  width: 200rpx;
  height: 200rpx;
  background: #00bcd5;
  border-radius: 200rpx;
  margin: 0 auto;
}

.upload-btn {
  text-align: center;
  position: relative;
  top: 50%;
  right: 8%;
  color: rgb(46, 51, 51);
  font-size: 0.8rem;
}

.btn-icon {
  position: relative;
  color: #fff;
  left: 37%;
  top: 30%;
  width: 64rpx;
  height: 64rpx;
}

image.icon {
  width: 25rpx;
  height: 25rpx;
  margin: 0;
}

.btn-info {
  font-size: 0.8rem;
  text-align: center;
}

.canvas {
  flex: 1;
  width: 100%;
  margin: 0.5rem 0;
}

.sample-icon {
  width: 100%;
  height: 240rpx;
}
